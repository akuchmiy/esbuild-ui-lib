{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2015",
    "jsx": "react",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "newLine": "lf",
    "allowSyntheticDefaultImports": true
  }
}
